/*
 * MAC - Multiplier and Accumulator
 * A 4-bit unsigned MAC unit with saturation and rounding
 */

/*
 * Input and output ports
 */
port in u4 a, b, out u4 result;
u4 sum, prod;

/**
 * Task
 */
void main() {
	prod = (a.read * b.read);
	fence;
	sum = sum + prod;
	result.write(sum);
}