package com.synflow.hello.src;
import com.synflow.hello.src.Hello.*;

task DriverSegment {
	in char character;
	out u8 seg;

	u5 value;

	void loop() {
		value = (u5) (character.read - 65);
		if (value > 25) {
			value = 25;
		}
		seg.write(segment[value]);
	}
}
